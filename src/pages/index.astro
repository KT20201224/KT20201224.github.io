---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

// 최신 포스트 3개 가져오기
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
).slice(0, 3);
---

<!doctype html>
<html lang="ko">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<!-- 히어로 섹션 -->
			<section class="hero">
				<h1>안녕하세요, KT입니다</h1>
				<p class="hero-description">
					개발과 기술에 대한 생각을 기록하는 공간입니다.
				</p>
			</section>

			<!-- 최신 포스트 섹션 -->
			<section class="recent-posts">
				<h2>최신 포스트</h2>
				<div class="post-grid">
					{posts.map((post) => (
						<article class="post-card">
							<h3>
								<a href={`/blog/${post.slug}/`}>{post.data.title}</a>
							</h3>
							<time datetime={post.data.pubDate.toISOString()}>
								{post.data.pubDate.toLocaleDateString('ko-KR')}
							</time>
							<p>{post.data.description}</p>
						</article>
					))}
				</div>
				<a href="/blog" class="view-all">모든 포스트 보기 →</a>
			</section>

			<!-- 소개 섹션 -->
			<section class="about">
				<h2>About</h2>
				<p>
					기술 블로그를 통해 배운 것들을 정리하고 공유합니다.
					주로 웹 개발, 프로그래밍, 그리고 새로운 기술에 대해 다룹니다.
				</p>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		width: calc(100% - 2em);
		max-width: 1200px;
		margin: 0 auto;
		padding: 2em 1em;
	}

	.hero {
		text-align: center;
		padding: 4em 0;
		margin-bottom: 3em;
	}

	.hero h1 {
		font-size: 3rem;
		margin-bottom: 1rem;
		color: rgb(var(--accent));
	}

	.hero-description {
		font-size: 1.25rem;
		color: rgb(var(--gray));
		max-width: 600px;
		margin: 0 auto;
	}

	.recent-posts {
		margin-bottom: 4em;
	}

	.recent-posts h2 {
		margin-bottom: 2em;
		font-size: 2rem;
	}

	.post-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2em;
		margin-bottom: 2em;
	}

	.post-card {
		background: rgb(var(--gray-light));
		padding: 1.5em;
		border-radius: 8px;
		border: 1px solid rgb(var(--gray-lighter));
	}

	.post-card h3 {
		margin: 0 0 0.5em 0;
		font-size: 1.25rem;
	}

	.post-card h3 a {
		color: rgb(var(--black));
		text-decoration: none;
	}

	.post-card h3 a:hover {
		color: rgb(var(--accent));
	}

	.post-card time {
		color: rgb(var(--gray));
		font-size: 0.9rem;
	}

	.post-card p {
		margin-top: 1em;
		color: rgb(var(--gray-dark));
		line-height: 1.5;
	}

	.view-all {
		color: rgb(var(--accent));
		text-decoration: none;
		font-weight: bold;
	}

	.view-all:hover {
		text-decoration: underline;
	}

	.about {
		text-align: center;
		padding: 3em 0;
	}

	.about h2 {
		margin-bottom: 1em;
		font-size: 2rem;
	}

	.about p {
		font-size: 1.1rem;
		color: rgb(var(--gray-dark));
		max-width: 600px;
		margin: 0 auto;
		line-height: 1.6;
	}

	@media (max-width: 768px) {
		.hero h1 {
			font-size: 2rem;
		}
		
		.post-grid {
			grid-template-columns: 1fr;
		}
	}
</style>