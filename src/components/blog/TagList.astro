---
interface Props {
  tags: string[];
  size?: 'sm' | 'md' | 'lg';
  clickable?: boolean;
}

const { tags, size = 'md', clickable = true } = Astro.props;

const sizeClasses = {
  sm: 'text-xs px-2 py-0.5',
  md: 'text-sm px-3 py-1',
  lg: 'text-base px-4 py-1.5',
};
---

{tags.length > 0 && (
  <div class="tag-list">
    {tags.map((tag) =>
      clickable ? (
        <a href={`/tags/${tag}/`} class={`tag ${size}`}>
          #{tag}
        </a>
      ) : (
        <span class={`tag ${size}`}>#{tag}</span>
      )
    )}
  </div>
)}

<style>
  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    display: inline-flex;
    align-items: center;
    background: var(--accent-light-translucent);
    color: var(--accent);
    border-radius: 99px;
    font-weight: 500;
    transition: all 0.2s ease;
    text-decoration: none;
  }

  a.tag:hover {
    background: var(--accent);
    color: white;
  }

  .tag.sm {
    font-size: 0.75rem;
    padding: 0.125rem 0.5rem;
  }

  .tag.md {
    font-size: 0.875rem;
    padding: 0.25rem 0.75rem;
  }

  .tag.lg {
    font-size: 1rem;
    padding: 0.375rem 1rem;
  }
</style>
