---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
---

<header>
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/news">News</HeaderLink>
      <HeaderLink href="/projects">Projects</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>
  </nav>
</header>
<style>
  header {
    position: sticky;
    top: 0;
    z-index: 100;
    margin: 0;
    padding: 0.5em 1em;
    background: rgba(255, 255, 255, 0.85); /* Slightly more opaque for header */
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }
  
  h2 {
    margin: 0;
    font-size: 1.25em;
    font-weight: 800;
    background: linear-gradient(120deg, var(--accent), #b06ab3);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
    display: block; /* Ensure gradient applies nicely */
  }
  
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px; /* Match layout width */
    margin: 0 auto;
  }
  
  .internal-links {
    display: flex;
    gap: 0.5rem;
  }
  
  nav a {
    padding: 0.5em 1em;
    color: var(--black);
    border-bottom: none; /* Removed underline style */
    text-decoration: none;
    font-weight: 500;
    border-radius: 99px; /* Pill shape */
    transition: all 0.2s ease;
    font-size: 0.95rem;
  }
  
  nav a.active {
    text-decoration: none;
    background-color: var(--accent);
    color: white;
  }
  
  nav a:not(.active):hover {
    background-color: var(--gray-light);
    color: var(--accent);
  }
  
  @media (max-width: 720px) {
    .internal-links {
      display: none; /* Mobile menu implementation usually needed here */
    }
    
    /* Simple mobile fix for now */
    nav {
      justify-content: center;
    }
  }
</style>
